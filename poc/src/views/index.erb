<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <form action="/" method="post">
      <input class="new-todo" placeholder="What needs to be done?" autofocus="" name="new-todo">
    </form>
  </header>

  <% if @todos.size > 0 %>
    <section class="main">
      <input id="toggle-all" class="toggle-all" type="checkbox">
      <label for="toggle-all">Mark all as complete</label>
      <ul class="todo-list">
        <% @todos.each do |todo| %>
          <%= erb(:todo, locals: {todo: todo}, layout: false) %>
        <% end %>
      </ul>
    </section>

    <footer class="footer">
      <span class="todo-count"><strong>0</strong> items left</span>
      <ul class="filters">
        <li>
          <a href="#/" class="selected">All</a>
        </li>
        <li>
          <a href="#/active">Active</a>
        </li>
        <li>
          <a href="#/completed">Completed</a>
        </li>
      </ul>
      <button class="clear-completed" style="display: none;"></button>
    </footer>
  <% end %>
</section>
