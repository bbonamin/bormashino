<li <% if todo.completed %>class="completed"<% end %>>
  <div class="view">
    <form action="/todos/<%= todo.id %>" method="put">
      <input type="hidden" name="completed" value="false">
      <input
        class="toggle"
        data-bormashino-submit-on="change"
        type="checkbox"
        name="completed"
        <% if todo.completed %>checked<% end %>>
      <label><%= todo.title %></label>
    </form>

    <form action="/todos/<%= todo.id %>" method="delete">
      <button class="destroy" data-bormashino-submit-on="click"></button>
    </form>
  </div>
  <input class="edit" value="<%= todo.title %>">
</li>
